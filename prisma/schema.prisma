// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// NextAuth.js 用户认证模型
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 用户项目和作品模型
model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageData   String   // Base64 编码的图像数据
  canvasData  String?  // Fabric.js 画布数据
  thumbnail   String?  // 缩略图
  isPublic    Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

// 首页模板模型（从外部来源抓取并导入 Supabase，同时也可在本地 SQLite 以便开发）
model Template {
  id        String       @id @default(cuid())
  name      String
  imageUrl  String
  prompt    String
  type      TemplateType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

enum TemplateType {
  SINGLE_IMAGE_GENERATION  // 单图生图
  MULTI_IMAGE_GENERATION   // 多图生图
  TEXT_TO_IMAGE            // 文生图
}
